        li = link_to "Help", '#'
        
        - if user_signed_in?
          li = link_to "ユーザー一覧", '#'
          li.dropdown
            a href = '#' id="acount" class="dropdown-toggle"
            p アカウント情報
            ul#dropdown-menu.dropdown-menu
              li = link_to "プロフィール変更", edit_user_registration_path
