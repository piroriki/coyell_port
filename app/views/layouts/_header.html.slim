    button(id="hamburger" type="button" class="navbar-toggle collapsed")
      span.sr-only.Toggler.navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
      ul.navbar-menu
        .nav.navbar-nav.navbar-right.collapse.navbar-collapse
